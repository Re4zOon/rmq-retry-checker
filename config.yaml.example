# RabbitMQ Retry Checker Configuration

rabbitmq:
  host: localhost
  port: 5672
  mgmt_port: 15672  # Required for wildcard support
  username: guest
  password: guest
  vhost: /
  use_ssl: false
  ssl_verify: true  # Set to false for self-signed certificates

queues:
  dlq_name: my_dlq              # Supports wildcards: dlq.*, service_*_dlq
  target_queue: failed_queue    # Supports wildcards: dead.*, service_*_failed
  max_retry_count: 3

